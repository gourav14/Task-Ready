<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/taskview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<android.support.v7.widget.CardView
    android:backgroundTint="@color/intermediate"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    card_view:cardUseCompatPadding="true"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10sp"
            android:id="@+id/titleviewid"
            android:layout_width="200sp"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
         />



    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/discripid"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:layout_marginLeft="20sp"
        android:layout_marginStart="20sp"
        android:textSize="20dp"
      />
    <FrameLayout
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10sp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10sp"
        android:layout_gravity="end"
        android:layout_width="40sp"
        android:layout_height="25sp"
        android:background="@android:color/transparent">
        <Button
            android:background="@android:color/transparent"
            android:id="@+id/taskdelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:tint="@color/white"
            android:src="@drawable/ic_action_delete"
            />
    </FrameLayout>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/reminderlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="60sp">

        <ImageView
            android:id="@+id/abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_stat_clock"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/reminderview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/abc"
            android:layout_alignStart="@id/abc"
            android:layout_marginLeft="50sp"
            android:layout_marginStart="50sp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90sp">
        <ImageView
            android:id="@+id/abcd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:src="@drawable/ic_action_sandclock"
            android:tint="@android:color/black"
            />

        <TextView
            android:layout_marginLeft="25sp"
            android:layout_marginStart="25sp"
            android:textStyle="bold"
            android:id="@+id/dueviewid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>

</LinearLayout>